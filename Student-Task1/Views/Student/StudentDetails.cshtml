@model IEnumerable<Student_Task1.Models.StudentDetails>

@{
    ViewData["Title"] = "StudentDetails";
}

<h1>StudentDetails</h1>

<p>
    <a asp-action="CreateStudent">Add Student</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                StudentId
            </th>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BranchName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @(item.FirstName + " " + item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditStudent", new { id=item.Id  }) |
                    @Html.ActionLink("Delete", "DeleteStudent", new {  id=item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
